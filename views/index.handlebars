<!--Set up the indexhandlebars to have the template that handlebars can render to-->

<!--Create a button in index.handlebars that will submit the user input into the database-->

<h1>Burgers!</h1>

<div class="container">
    <div class="row">
        <div class = "col-6">
            <h3>Ready to EAT!</h3>
            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class = "col-6">
            <h3>YUM!</h3>
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h2>Add a Burger!</h2>
                <form class="create-form">

                <div class="form-group">
                    <label for="burg">Burger Name:</label>
                    <input type="text" id="burg" name="name">
                </div>

               <div class="form-group">
                <label for="devoured">Devoured?</label><br>
                <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                <input type="radio" name="devoured" value="0"> Not Devoured!
            </div>

                <button type="submit">Add Burger</button>
                </form>

        </div>
    </div>

</div>